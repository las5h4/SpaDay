<h1>Fancy Spa</h1>
<div id="clientProfile">
    <h3>Client Profile</h3>
    <p>@ViewBag.name</p>
</div>
<div id="servicesMenu">

    <h5>Facial Treatments</h5>
    <p>@ViewBag.skinType skin type is best suited to the follow facial types:</p>

    <ul>
        @foreach (string facial in @ViewBag.appropriateFacials)
        {
            <li>@facial</li>
        }
    </ul>

    <h5>Nail Services</h5>
    @if (ViewBag.maniPedi == "manicure")
    {
        <p>Our manicure is a great way to spend 30 minutes of your day! We use shea butter hand cream and the finest gel polish.</p>
    }
    else if (ViewBag.maniPedi == "pedicure")
    {
        <p>
            Relax for 45 minutes in pure luxury! Our massage chairs and experienced nail techs are here to get your feet in shape for sandal season!
        </p>
    }
    else
    {
        <p>Our manicure is a great way to spend 30 minutes of your day! We use shea butter hand cream and the finest gel polish.</p>
        <p>
            Relax for 45 minutes in pure luxury! Our massage chairs and experienced nail techs are here to get your feet in shape for sandal season!
        </p>
    }
</div>
<div id="colors">
    <h5>Available Colors</h5>
    <div>
        <div class="colorbox" id="redBox">Red</div>
        <div class="colorbox" id="yellowBox">Yellow</div>
        <div class="colorbox" id="greenBox">Green</div>
        <div class="colorbox" id="blueBox">Blue</div>
        <div class="colorbox" id="purpleBox">Purple</div>
    </div>
</div>
